
@{
    ViewBag.Title = "OtherRequestionReportList";
    Layout = "~/Views/Shared/_mainView.cshtml";
}

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Requestion Report List</h3>
        </div>
        <div class="card-body">

            <div class="table">
                <table id="table_id" class="table-bordered table-hover table-sm table-striped" style="width: 100%; overflow: auto; position: relative;">
                    <thead>
                        <tr>
                            <th class="center">Requisition No</th>
                            <th class="tblBroker_head">BranchID</th>
                            <th class="center">Branch Name</th>
                            <th class="tblBroker_head">DepartmentID</th>
                            <th class="center">Department Name</th>
                            <th class="center">Requested by</th>
                            <th class="center">Completed by</th>
                            <th class="center">Completed Date</th>
                            <th class="center"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r_List in ViewBag.OthersRequisition)
                        {
                        <tr>
                            <td>@r_List.App_Req_ID</td>
                            <td class="tblBroker_head">@r_List.BranchID</td>
                            <td>@r_List.BranchName</td>
                            <td class="tblBroker_head">@r_List.DepartmentId</td>
                            <td>@r_List.DepartmentName</td>
                            <td>@r_List.Requested_by</td>
                            <td>@r_List.CompleteBy</td>
                            <td>@r_List.CompleteDate</td>
                            <td><input type="button" id="btnDone" value="Show Report" class="btn btn-primary" onclick="location.href='@Url.Action("OtherRequestionReportDetails", "Requestion", new {ReqID = @r_List.App_Req_ID})'" /></td>                            
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        var table = $('#table_id').DataTable({
            rowReorder: {
                selector: 'td:nth-child(2)'
            },
            "fnInitComplete": function (oSettings) {
                $('.tblBroker_head').hide();
            },
            responsive: true
        });
    });
    $(document).ready(function () {
        $('#table_id').DataTable();

    });
</script>
