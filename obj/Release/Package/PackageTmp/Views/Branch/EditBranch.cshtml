@model scs_Project.Models.BranchInfo

@{
    Layout = null;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.id)

    <div class="modal-header bg-info">
        <h4 class="modal-title">Update Branch</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <div class="modal-body">
        <div class="card-body">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Branch Code</label>
                @*@Html.LabelFor(model => model.BranchCode, htmlAttributes: new { @class = "col-sm-4 col-form-label" })*@
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.BranchCode, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BranchCode, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Branch Name</label>
                @*@Html.LabelFor(model => model.BranchName, htmlAttributes: new { @class = "col-sm-4 col-form-label" })*@
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.BranchName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BranchName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Focal Person</label>
                @*@Html.LabelFor(model => model.Focal_Person, htmlAttributes: new { @class = "col-sm-4 col-form-label" })*@
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.Focal_Person, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Focal_Person, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Contact</label>
                @*@Html.LabelFor(model => model.Contact, htmlAttributes: new { @class = "col-sm-4 col-form-label" })*@
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Address</label>
                @*@Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "col-sm-4 col-form-label" })*@
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Division Name</label>
                <div class="col-sm-8">
                    @Html.DropDownList("DivisionID", (IEnumerable<SelectListItem>)ViewBag.DivisionList, new { @class = "form-control extra-class" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Type</label>
                @*@Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "col-sm-4 col-form-label" })*@
                <div class="col-sm-8">
                    @Html.DropDownList("TypeID", (IEnumerable<SelectListItem>)ViewBag.TypeList, new { @class = "form-control extra-class" })
                    @*@Html.DropDownList("Type", new SelectList(new List<SelectListItem> { new SelectListItem { Text = "Branch", Value = "Branch", Selected = true }, new SelectListItem { Text = "Agency", Value = "Agency" } }, "Value", "Text"), new { @class = "form-control" })*@
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Row Status</label>
                <div class="col-sm-4">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Row_Status)
                    </div>
                </div>
                <div class="col-sm-4">
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer justify-content-between">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-info">Update</button>
    </div>



}



