<script>
    $(document).ready(function () {
        $(".sendEmail").click(function () {
            var emails = [];
            $.each($(".emails option:selected"), function () {
                emails.push($(this).val());
            });
            var subject = $('#Subject').val();
            if (subject.length < 1) {
                alert("Subject Required");
                return;
            }
            var body = $("#Body").val();
            if (body.length < 1) {
                alert("Message Required");
                return;
            }
            var value = $("#someName").val();
            //var x = document.getElementsByClassName("masterId");

            var obj = { subject: subject, body: body, email: emails, masterId: value };

            //console.log(obj);
            $.ajax({
                url: "/Requestion/SendEmail",
                traditional: true,
                data: obj,
                type: 'get',
                dataType: 'json',
                success: function (response) {
                    console.log(response);
                },
                error: function (response) {
                    console.log("error");
                    console.log(response);
                }
            });




        });
    });
</script>

