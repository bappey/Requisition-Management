@model SCS_Inventory.Models.UserInfo

@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_mainView.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="form-horizontal">

            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Change Password</h2>
                </div>
                <div class="card-body">
                    <div class="panel-body">
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">User Name</label>
                            <div class="col-md-3">
                                <input type="text" class="form-control" name="UserName" placeholder="User Name" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Password</label>
                            <div class="col-md-3">
                                <input type="text" class="form-control" name="Password" placeholder="New Password" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Update Password" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                    @if (ViewData["Message"] != null)
                    {
                        <div id="popupdiv" style="color:red;">
                            @ViewData["Message"]
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column menunav2" id="menunav2" data-widget="treeview" role="menu" data-accordion="false">
                                                      
                        </ul>
                    </nav>
                </div>
            </div>
            
        </div>
    </div>
        }



