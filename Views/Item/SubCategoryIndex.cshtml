@model IEnumerable<scs_Project.Models.SubCategoryInfo>

@{
    ViewBag.Title = "Sub Category Index";
    Layout = "~/Views/Shared/_mainView.cshtml";
}
<link href="~/Content/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
<div class="card">

    <div class="card-header bg-info">
        <h3 class="card-title">Sub Category List</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            @*<button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fas fa-times"></i>
            </button>*@
        </div>
    </div>

    <div class="card-body">
        <div class="text-right mb-2">
            <button type="button" class="btn btn-sm btn-success" data-toggle="modal" data-target="#mdlSubCategory"><i class="fa fa-plus"></i> Add New</button>
        </div>
        @*<p>
                <button type="button" class="btn btn-sm btn-default" data-toggle="modal" data-target="#mdlSubCategory">Create</button>
            </p>*@

    <div class="container">
        <table id="table_id" class="cell-border" style="width:100%">

            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Sub Category Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in ViewBag.SubCategoryRecord)
                {
                    <tr>
                        <td>@item.C_Info.CategoryName</td>
                        <td>@item.S_C_Info.SubCategoryName</td>
                        @*<td>
                        <button type="button" class="btn btn-sm btn-default" onclick="OpenEditSubCategory(@item.S_C_Info.id)">Edit</button> |
                        @Html.ActionLink("Delete", "Delete", new { id = item.S_C_Info.id })
                    </td>*@
                        <td class="text-center">
                            <a href="javascript:void(0)" onclick="OpenEditSubCategory(@item.S_C_Info.id)" class="mr-2"><i title="edit" class="fa fa-pencil-alt  text-secondary"></i></a>
                            <a href="@Url.Action("Delete", "Delete", new { id = item.S_C_Info.id })"><i title="delete" class="fa fa-trash text-danger"></i></a>
                        </td>
                    </tr>
                }
            <tbody>
            <tfoot>
                <tr>
                    <th>Category Name</th>
                    <th>Sub Category Name</th>
                    <th>Action</th>
                </tr>
            </tfoot>
        </table>
    </div>
    </div>
</div>

<div class="modal fade" id="mdlSubCategory" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header bg-info">
                <h4 class="modal-title" id="exampleModalLabel">New Sub Category</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                }
            </div>

            <form action="AddSubCategory" method="post">
                <div class="modal-body">

                    <div class="form-group row">

                        @*<label for="CategoryInfoid" class="col-form-label">Category</label>
                @Html.DropDownList("CategoryInfoid", (IEnumerable<SelectListItem>)ViewBag.ParentCategory, new { @class = "form-control extra-class" })*@
                        <label for="message-text" class="col-sm-4 col-form-label">Category</label>
                        <div class="col-sm-8">
                            @Html.DropDownList("CategoryInfoid", (IEnumerable<SelectListItem>)ViewBag.ParentCategory, new { @class = "form-control extra-class" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @*<label for="message-text" class="col-form-label">Sub Category Name</label>
                <input type="text" class="form-control" name="SubcategoryName" />*@
                        <label for="message-text" class="col-sm-4 col-form-label">Sub Category Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="SubcategoryName" />
                        </div>
                    </div>
                </div>

                @*<div class="modal-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>*@

                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-info">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="editSubCategory" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @*<div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Update Category</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>*@
            <div id="editDiv">

            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        var table = $('#table_id').DataTable({
            rowReorder: {
                selector: 'td:nth-child(2)'
            },
            responsive: true
        });
    });

</script>

@*@section scripts {*@
<script type="text/jscript">

    function OpenEditSubCategory(id) {
        //alert(id);
        $.ajax({
            url: "../item/EditSubCategory/" + id,
            success: function (result) {
                $('#editDiv').html(result);
                $('#editSubCategory').modal('toggle');
                // console.log(result);
            }
        });
    }
</script>
